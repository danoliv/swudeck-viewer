{
  "name": "swudeck-viewer",
  "version": "1.0.0",
  "description": "Star Wars Unlimited Deck Viewer",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "fetch-sets": "node fetch-sets.js"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "testPathIgnorePatterns": ["<rootDir>/test.js", "<rootDir>/test-runner.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!test/**",
      "!test-setup.js",
      "!test-runner.js"
    ]
  }
}
